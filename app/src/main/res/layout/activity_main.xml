<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="igor.bstu.by.db5.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:text="Ключ"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="введите ключ..."
        android:inputType="textPersonName"
        android:textColor="?attr/colorControlNormal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Значение"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="введите значнеие..."
        android:inputType="textPersonName"
        android:textColor="?attr/colorControlNormal" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Сохранить"
        android:textSize="18sp"
        android:onClick="onSaveInHashTable"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ключ"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/keySearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="введите ключ..."
        android:textColor="?attr/colorControlNormal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Значение"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/valueView"
        android:background="#ded7d7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp" />

    <Button
        android:id="@+id/searchFromHash"
        android:layout_marginTop="5dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Получить значение"
        android:textSize="18sp"
        android:onClick="onSearchFromHashTable"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:text="ФАЙЛ"
        android:onClick="onOpenFile"/>
</LinearLayout>
